@model IEnumerable<AppRole>

<a class="btn btn-primary" href="/Roles/Create">Create Role</a>
<hr>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>Kullanıcılar</th>
            <th style="width: 80px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <a href="Roles/Edit/@role.Id" class="btn btn-primary btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table> 